@model GroceryShopSystem.Models.Order
@{
    ViewData["Title"] = "Order Details";
    var counter = 1;
}

<div class="container my-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Order Details</h4>
            <span class="badge bg-light text-primary">@Model.Status.ToUpper()</span>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5>Order Information</h5>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Order No:</strong> <p>@Model.OrderNo</p></li>
                    <li class="list-group-item"><strong>Order Date:</strong> @Model.CreatedAt.ToString("dd MMM yyyy")</li>
                    <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
                    <li class="list-group-item"><strong>Remark:</strong> @Model.Remark</li>
                </ul>
            </div>

            <div class="mb-4">
                <h5>Items</h5>
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@item.Product.Title</td>
                                <td>@item.Quantity</td>
                                <td>$@item.PriceAtPurchase</td>
                                <td>$@(item.Quantity* item.PriceAtPurchase)</td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end">
                <div class="card p-3 shadow-sm" style="width: 300px;">
                    <h6 class="mb-2">Summary</h6>
                    <p class="mb-1 d-flex justify-content-between"><span>Subtotal:</span><span>$@Model.TotalPrice</span></p>
                    <p class="mb-1 d-flex justify-content-between"><span>Shipping:</span><span>$@Model.ShippingPrice</span></p>
                    <p class="mb-1 d-flex justify-content-between"><span>Tax:</span><span>$@Model.Tax</span></p>
                    <hr>
                    <p class="fw-bold d-flex justify-content-between"><span>Total:</span><span>$@Model.GrandTotalPrice</span></p>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-secondary">Back to Orders</a>
    </div>
</div>
