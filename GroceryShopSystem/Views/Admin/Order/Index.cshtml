@model IEnumerable<GroceryShopSystem.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container my-5">
    <h2 class="mb-4 text-center fw-bold">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-4">
            You have no orders yet. <a asp-controller="Home" asp-action="Index" class="fw-bold">Shop Now</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow rounded-3">
            <table class="table align-middle table-hover">
                <thead class="table-">
                    <tr>
                        <th>#</th>
                        <th>Order No</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Select((o, index) => new { Order = o, Index = index + 1 }))
                    {
                        <tr>
                            <td>@order.Index</td>
                            <td class="fw-bold">@order.Order.OrderNo</td>
                            <td>@order.Order.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="badge @GetStatusBadge(order.Order.Status)">
                                    @order.Order.Status
                                </span>
                            </td>
                            <td class="fw-bold">$@order.Order.GrandTotalPrice.ToString("0.00")</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    string GetStatusBadge(string status)
    {
        return status.ToLower() switch
        {
            "create" => "bg-warning text-dark",
            "delivered" => "bg-success",
            "pending" => "bg-secondary",
            _ => "bg-info"
        };
    }
}
