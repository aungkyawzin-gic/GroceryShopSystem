@model IEnumerable<GroceryShopSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "User List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User List</h2>
        @* <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Create New User
        </a> *@
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Full Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Date of Birth</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-3">
                                    No users found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm me-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        @* Uncomment below for edit/delete *@
                                        @* 
                                        <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </a> 
                                        *@
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
