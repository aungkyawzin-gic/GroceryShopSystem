@model IEnumerable<GroceryShopSystem.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    var cartId = Model?.FirstOrDefault()?.Cart?.Id ?? 0;
}

<div class="container my-5">
    <h2 class="mb-2 text-center">Your Shopping Cart</h2>
    <p class="text-center text-muted">Cart ID: @cartId</p>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Your cart is empty. <a asp-controller="Home" asp-action="Index">Shop Now</a>
        </div>
    }
    else
    { 
        <div class="table-responsive">
            <table class="table align-middle table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Subtotal</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="d-flex align-items-center">
                                <img src="@item.Product.ImageUrl" alt="@item.Product.Title" class="rounded me-2" style="width:60px; height:60px; object-fit:cover;" />
                                <span>@item.Product.Title</span>
                            </td>
                            <td>$@item.Product.Price</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm w-50 me-2" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                                </form>
                            </td>
                            <td>$@(item.Product.Price* item.Quantity)</td>
                            <td>
                                <form asp-action="#" method="post">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <h4 class="me-4">
                Total: $@Model.Sum(i => i.Product.Price * i.Quantity)
            </h4>
            <a asp-area="Customer" asp-controller="Orders" asp-action="OrderForm" class="btn btn-success btn-lg">
                Proceed to Checkout
            </a>
        </div>
    }
</div>
