@model IEnumerable<GroceryShopSystem.Models.Product>

@{
    Layout = ViewData["Layout"]?.ToString() ?? "_Layout";
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <h2 class="mb-4">Available Products</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    @* <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" /> *@
                    <div class="card-body">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <p class="fw-bold">$@product.Price</p>
                        <a asp-area="" asp-controller="Products" asp-route-id="@product.Id" asp-action="Index" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
