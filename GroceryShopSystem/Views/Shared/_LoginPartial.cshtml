@using Microsoft.AspNetCore.Identity
@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}

<ul class="navbar-nav">
    @if (isAuthenticated)
    {
        if (User.IsInRole("Customer"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Profile" asp-action="Index">Profile</a>
            </li>
        }
        <li class="nav-item">
            <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post" style="display:none;">
                @Html.AntiForgeryToken()
            </form>
            <a class="nav-link" href="#" onclick="event.preventDefault(); document.getElementById('logoutForm').submit();">
                Logout
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Account"  asp-action="Register">Register</a>
        </li>
    }
</ul>